doctype html
html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles/styles.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
        title Fakecatchmind
    body
        .loginBox
            form#gameLogin
                input(type="text" placeholder="What your game nickname?" )
        .gameContainer#gameCatchMind
            .main
                canvas.canvas#gameCanvas
                .controls#controls
                    .buttons#canvasBtn
                        button#canvasMode 
                            i.fa-solid.fa-fill 
                        button#canvas__clean
                            i.fa-solid.fa-trash-can
                        button#canvas__earaser
                            i.fa-solid.fa-eraser
                        input(type="range", min="1", max="10", value="5",step="0.5" )#line__width
                    input(type="color").colors#color
                    .colors__shortCut
                        .colors__style.gameColor(style="background-color:#1abc9c",data-color="#1abc9c")
                        .colors__style.gameColor(style="background-color:#2ecc71",data-color="#2ecc71")
                        .colors__style.gameColor(style="background-color:#3498db",data-color="#3498db")
                        .colors__style.gameColor(style="background-color:#e74c3c",data-color="#e74c3c")
                        .colors__style.gameColor(style="background-color:#95a5a6",data-color="#95a5a6")
                        .colors__style.gameColor(style="background-color:#bdc3c7",data-color="#bdc3c7")
                        .colors__style.gameColor(style="background-color:#27ae60",data-color="#27ae60")
                        .colors__style.gameColor(style="background-color:#2980b9",data-color="#2980b9")
                        .colors__style.gameColor(style="background-color:#8e44ad",data-color="#8e44ad")
                        .colors__style.gameColor(style="background-color:#2c3e50",data-color="#2c3e50")
                        .colors__style.gameColor(style="background-color:#f1c40f",data-color="#f1c40f")
                        .colors__style.gameColor(style="background-color:#e67e22",data-color="#e67e22")
            .chat
                .player__board#gameBoard
                ul.chat__messages#gameMessages
                form.chat__form#gameSendMsg
                    input(type="text", placeholder="Write a message")
        script. 
            window.events = !{events}
        script(src="/socket.io/socket.io.js")
        script(src="js/main.js")